datasource db {
  provider = "mysql"
  url      = "mysql://root:prisma@localhost:3306/p2-lift-ambi"
}

generator photon {
  provider = "photonjs"
}

model User {
  id                 String   @default(cuid()) @id @unique
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  email              String   @unique
  name               String?
  displayName        String?
  profilePhoto       String?
  pendingSetup       Boolean?
  doNotDisturb       Boolean?
  desktopIdleSeconds String?

  memberships Member[]
  // invitedBy   User?
}

model UserLoginToken {
  id             String   @default(cuid()) @id @unique
  createdAt      DateTime @default(now())
  email          String
  securityPhrase String
  user           User?
  verified       Boolean?
  token          String?
}

model Member {
  id             String         @default(cuid()) @id @unique
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  user           User
  space          Space
  role           PermissionRole
  invited        Boolean?
  inviteAccepted Boolean?
}

enum PermissionRole {
  Admin
  Member
}

model Space {
  id             String   @default(cuid()) @id @unique
  createdAt      DateTime @default(now())
  name           String
  joinSecretCode String
  members        Member[]
}
